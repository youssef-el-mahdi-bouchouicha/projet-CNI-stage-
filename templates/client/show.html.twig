{% extends 'DashbordBack.html.twig' %}

{% block title %}Client{% endblock %}

{% block content %}
    <h1>Client</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Idc</th>
                <td>{{ client.idc }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ client.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ client.prenom }}</td>
            </tr>
            <tr>
                <th>Tel</th>
                <td>{{ client.tel }}</td>
            </tr>
            <tr>
                <th>Poste</th>
                <td>{{ client.poste }}</td>
            </tr>
        <tr>
            <td width="150">
                <a class="btn btn-block btn-outline-warning"  href="{{ path('client_edit', {'idc': client.idc}) }}">edit</a>
            </td>
            <td>
                {{ include('client/_delete_form.html.twig') }}
            </td>
        </tr>
        </tbody>
    </table>






{% endblock %}
