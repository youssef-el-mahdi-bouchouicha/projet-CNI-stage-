{{ form_start(form, {attr: {'novalidate': 'novalidate'}}) }}
<div class="container">
    <br>
    <h4 align="center">Ajouter un Emplyee</h4>


    <div class="form-group">
        {{ form_label(form.nom,"Nom :") }}
        <div style="color: #ff0000">
            {{ form_errors(form.nom)}}
        </div>
        {{ form_widget(form.nom, {attr: {class:'form-control','id':'nom'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(form.prenom,"Prenom :") }}
        <div style="color: #ff0000">
            {{ form_errors(form.prenom)}}
        </div>
        {{ form_widget(form.prenom, {attr: {class:'form-control','id':'prenom'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(form.tel,"Numero de Telephone :") }}
        <div style="color: red">
            {{ form_errors(form.tel)}}
        </div>
        {{ form_widget(form.tel, {attr: {class:'form-control','id':'tel'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(form.poste,"Poste :") }}
        <div style="color: red">
            {{ form_errors(form.poste)}}
        </div>
        {{ form_widget(form.poste, {attr: {class:'form-control','id':'poste'}}) }}
    </div>
    <div class="form-group">
        {{ form_widget(form) }}
        <br>
        <button class="btn btn-outline-primary">{{ button_label|default('confirmer') }}</button>
        <br>
        <a href="{{ path('employee_index') }}">back to list</a>
    </div>

</div>
{{ form_end(form) }}
